class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        if not nums:return 0
        ans=1
        nums=sorted(list(set(nums)))
        l=0
        for k in range(len(nums)-1):
            if nums[k+1]-nums[k] == 1:ans+=1
            else:
                if l<ans:l=ans
                ans=1
        return max(l,ans)
                
                
                
        
